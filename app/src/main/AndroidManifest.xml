    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_of"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/petmatch_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetMatch"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.match.MatchActivity"></activity>
        <activity android:name=".activities.pet.mypetsliked.MyPetsLikedActivity" />
        <activity android:name=".activities.pet.petsliked.PetsLikedActivity" />
        <activity android:name=".activities.pet.editpet.EditPetActivity" />
        <activity android:name=".activities.profile.ProfileActivity" />
        <activity android:name=".activities.signuppet.SignUpPetErrorActivity" />
        <activity android:name=".activities.signuppet.SignUpPetSuccessActivity" />
        <activity
