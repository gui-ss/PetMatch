            android:exported="true" />
        <activity android:name=".activities.signuppet.SignUpPetStepThreeActivity" />
        <activity android:name=".activities.signuppet.SignUpPetStepTwoActivity" />
        <activity android:name=".activities.signuppet.SignUpPetStepOneActivity" />
        <activity android:name=".activities.lgpd.PolicyPrivacyActivity" />
        <activity android:name=".activities.lgpd.TermsOfUseActivity" />
        <activity android:name=".activities.aboutapp.AboutAppActivity" />
        <activity android:name=".activities.lgpd.LgpdHomeActivity" />
        <activity android:name=".activities.lgpd.LgpdActivity" />
        <activity android:name=".activities.signup.SignUpStepFourActivity" />
        <activity android:name=".activities.signup.SignUpStepThreeActivity" />
        <activity android:name=".activities.signup.SignUpStepTwoActivity" />
        <activity android:name=".activities.signup.SignUpStepOneActivity" />
