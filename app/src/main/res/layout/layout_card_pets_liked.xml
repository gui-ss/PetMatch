<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="16dp"
    android:layout_margin="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/btn_new_pet"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:paddingBottom="10dp"
        android:background="@drawable/background_card_my_pets"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/img_pet"
            android:layout_width="360dp"
            android:layout_height="210dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/img_image_not_found"
            />

        <TextView
            android:id="@+id/tv_name_pet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bob"
            android:textColor="#595959"
            android:textStyle="bold"
            android:textSize="27sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_pet"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/img_petweek"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_petweek"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/img_pet"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
